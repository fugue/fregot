    Fregot.Repl.Multiline
    Fregot.Repl.Parse
    Fregot.Sources
    Fregot.Sources.SourceSpan
    Fregot.Sugar
    Fregot.Test
    Fregot.TypeCheck.Types
    Fregot.Version

    Control.Monad.Parachute
    Control.Monad.Stream
    Data.Cache
    Data.SafeVar
    Data.Traversable.HigherOrder
    Data.Unification
    Data.Unique
    Language.Dot

    Control.Monad.Extended
    Data.Aeson.Extended
    Data.Aeson.TH.Extended
    Data.ByteString.Extended
    Data.HashMap.Strict.Extended
    Data.HashSet.Extended
    Data.IORef.Extended
    Data.List.Extended
    Data.List.NonEmpty.Extended
    Data.Text.Extended
    Data.Vector.Extended
    Debug.Trace.Extended
    Options.Applicative.Extended
    System.Console.Haskeline.Extended
    System.Directory.Find
    System.FilePath.Extended
    System.IO.Extended
    Text.Parsec.Extended
    Text.Printf.Extended

    Paths_fregot

  Build-depends:
    aeson                >= 1.4  && < 1.5,
    annotated-wl-pprint  >= 0.7  && < 0.8,
    ansi-terminal        >= 0.8  && < 0.9,
    base                 >= 4    && < 5,
    binary               >= 0.8  && < 0.9,
    blaze-html           >= 0.9  && < 0.10,
    bytestring           >= 0.10 && < 0.11,
    containers           >= 0.6  && < 0.7,
    directory            >= 1.3  && < 1.4,
    filepath             >= 1.4  && < 1.5,
    Glob                 >= 0.9  && < 0.10,
    hashable             >= 1.2  && < 1.3,
    haskeline            >= 0.7  && < 0.8,
    indents              >= 0.5  && < 0.6,
    lens                 >= 4.17 && < 4.18,
    mtl                  >= 2.2  && < 2.3,
    optparse-applicative >= 0.14 && < 0.15,
    parsec               >= 3.1  && < 4.2,
    pcre-simple          >= 0.1  && < 0.2,
    psqueues             >= 0.2  && < 0.3,
    scientific           >= 0.3  && < 0.4,
    text                 >= 1.2  && < 1.3,
    time                 >= 1.8  && < 1.9,
    timerep              >= 2.0  && < 2.1,
    unordered-containers >= 0.2  && < 0.3,
    vector               >= 0.12 && < 0.13,
    vector-instances     >= 3.4  && < 3.5,
    zlib                 >= 0.6  && < 0.7

Executable fregot
  Hs-source-dirs:    src/fregot
  Main-is:           Main.hs
  Default-language:  Haskell2010
  Ghc-options:       -Wall -Werror -rtsopts -threaded
  build-depends:     base, fregot

Executable fspec
  Hs-source-dirs:    src/fspec
  Main-is:           Main.hs
  Default-language:  Haskell2010
  Ghc-options:       -Wall -Werror -rtsopts -threaded

  Build-depends:
    fregot,
    aeson                >= 1.4  && < 1.5,
    aeson-pretty         >= 0.8  && < 0.9,
    async                >= 2.2  && < 2.3,
    base                 >= 4    && < 5,
    bytestring           >= 0.10 && < 0.11,
    Diff                 >= 0.3  && < 0.4,
    directory            >= 1.3  && < 1.4,
    filepath             >= 1.4  && < 1.5,
    optparse-applicative >= 0.14 && < 0.15,
    pcre-simple          >= 0.1  && < 0.2,
    process              >= 1.6  && < 1.7,
    text                 >= 1.2  && < 1.3,
    time                 >= 1.8  && < 1.9

Test-suite fregot-tests
  Hs-source-dirs:    tests/hs
  Main-is:           Main.hs
  Type:              exitcode-stdio-1.0
  Default-language:  Haskell2010
  Ghc-options:       -Wall -Werror -rtsopts -threaded

  Other-modules:
    Data.SafeVar.Tests
    Fregot.Compile.Order.Tests
    Fregot.Interpreter.Dependencies.Tests
    Fregot.Prepare.Dsl
    Fregot.Prepare.Lens.Tests
    Fregot.Prepare.Vars.Tests
    System.Console.Haskeline.Tests

  Build-depends:
    fregot,
    base                 >= 4    && < 5,
    containers           >= 0.6  && < 0.7,
    lens                 >= 4.17 && < 4.18,
    mtl                  >= 2.2  && < 2.3,
    tasty                >= 1.2  && < 1.3,
    tasty-hunit          >= 0.10 && < 0.11,
    unordered-containers >= 0.2  && < 0.3
